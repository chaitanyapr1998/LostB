<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_aboutinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/txt_about" />

    <TextView
        android:id="@+id/txt_emailtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:layout_below="@+id/txt_aboutinfo" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_aboutinfo"
        android:layout_toRightOf="@+id/txt_emailtextview"
        android:autoLink="email"
        android:fontFamily="@font/lato_bold"
        android:text="findingg@gmail.com"
        android:textColorLink="@color/direction"
        android:textSize="20sp" />

</RelativeLayout>