<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeofenceActivity">

    <Button
        android:id="@+id/btn_addgeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Location"/>

    <TextView
        android:id="@+id/txt_locrem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Reminder"
        android:layout_below="@+id/btn_addgeo"/>

    <View
        android:id="@+id/viewline"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:layout_below="@+id/txt_locrem"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listofplaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewline"/>

</RelativeLayout>