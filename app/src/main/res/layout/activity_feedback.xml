<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edtbox"
        android:layout_margin="10dp"
        android:hint="Enter your name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <EditText
        android:id="@+id/edt_useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_name"
        android:background="@drawable/edtbox"
        android:layout_margin="10dp"
        android:hint="Enter your email id*"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <EditText
        android:id="@+id/edt_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edtbox"
        android:layout_margin="10dp"
        android:hint="Comments"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/edt_useremail" />

    <TextView
        android:id="@+id/txt_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate our app"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        android:layout_below="@id/edt_comments"
        android:layout_margin="10dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/txt_rate"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/ratingBar"
        android:fontFamily="@font/lato_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:background="@drawable/upld_img"/>


</RelativeLayout>