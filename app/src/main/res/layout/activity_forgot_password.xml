<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <EditText
        android:id="@+id/edt_forpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:background="@drawable/edtbox"
        android:inputType="textEmailAddress"
        android:hint="Enter your email id"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/btn_sendemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_forpass"
        android:text="Send email to reset password"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lato_light"
        android:background="@drawable/fil_cancel"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</RelativeLayout>